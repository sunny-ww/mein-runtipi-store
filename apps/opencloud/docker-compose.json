{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/dynamic-compose.json",
  "services": [
    {
      "name": "opencloud",
      "image": "nextcloud:latest",
      "isMain": true,
      "internalPort": 80,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/var/www/html"
        }
      ],
      "env": {
        "PUID": "${PUID}",
        "PGID": "${PGID}",
        "TZ": "${TZ}"
      }
    }
  ]
}
